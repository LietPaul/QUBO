@model IEnumerable<QUBO.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Agregar Nuevo <i class="bi bi-plus-lg"></i></a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Dni)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Dni)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.IdCliente" class="btn btn-success" data-bs-toggle="tooltip" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdCliente" class="btn btn-primary" data-bs-toggle="tooltip" title="Detalles">
                        <i class="bi bi-info-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdCliente" class="btn btn-danger" data-bs-toggle="tooltip" title="Eliminar">
                        <i class="bi bi-x-square"></i>
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
