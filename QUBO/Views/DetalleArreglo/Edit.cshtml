@model QUBO.Models.DetalleArreglo

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>Detalle del Arreglo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdDetalle" />
            <input type="hidden" asp-for="IdArreglo" />
            <div class="form-group">
                <label asp-for="IdParte" class="control-label"></label>
                <select asp-for="IdParte" class="form-control" asp-items="ViewBag.IdParte"></select>
                <span asp-validation-for="IdParte" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-danger" asp-route-id="@Model?.IdArreglo">Cancelar</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
