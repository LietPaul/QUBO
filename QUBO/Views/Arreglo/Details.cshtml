@model QUBO.Models.Arreglo

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Arreglo</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Problema)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Problema)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Ingreso
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaIng)
        </dd>
        <dt class = "col-sm-2">
            Fecha de Entrega
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FechaEnt)
        </dd>
        <dt class = "col-sm-2">
            Seña
        </dt>
        <dd class = "col-sm-10">
            @{
                string seniaFormatted = String.Format("{0:C}", Model.Senia);
            }
            @seniaFormatted
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Total)
        </dt>
        <dd class = "col-sm-10">
            @{
                string totalFormatted = String.Format("{0:C}", Model.Total);
            }

            @totalFormatted
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>
        <dt class = "col-sm-2">
            Codigo de Producto
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdCelularNavigation!.CodigoProducto)
        </dd>
        <dt class = "col-sm-2">
            Dni del Cliente
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdClienteNavigation!.Dni)
        </dd>
        <dt class = "col-sm-2">
            Tecnico
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUsuarioNavigation!.Nombre)
            @Html.DisplayFor(model => model.IdUsuarioNavigation!.Apellido)
        </dd>
    </dl>
    <div>
        <a asp-controller="DetalleArreglo" asp-action="Index" asp-route-id="@Model.IdArreglo" class="btn btn-info">Ver Detalles de Arreglo</a>
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.IdArreglo" class="btn btn-success">Editar</a> |
    <a asp-action="Index" class="btn btn-primary">Volver</a>
</div>
