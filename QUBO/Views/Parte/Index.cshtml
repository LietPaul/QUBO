@model IEnumerable<QUBO.Models.Parte>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.CodigoProducto)
            </th>
            <th class="text-center">
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            @*<th class="text-center">
                @Html.DisplayNameFor(model => model.Modelo)
            </th>*@
            <th class="text-center">
                @Html.DisplayNameFor(model => model.PrecioUsd)
            </th>
            <th class="text-center">
                Modelo Cel.
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CodigoProducto)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.Modelo)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.PrecioUsd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdCelularNavigation!.Modelo)
            </td>
                <td class="text-center">
                    <a asp-action="Edit" asp-route-id="@item.IdPartes" class="btn btn-success" data-bs-toggle="tooltip" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.IdPartes" class="btn btn-primary" data-bs-toggle="tooltip" title="Detalles">
                        <i class="bi bi-info-square"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.IdPartes" class="btn btn-danger" data-bs-toggle="tooltip" title="Eliminar">
                        <i class="bi bi-x-square"></i>
                    </a>
                </td>
        </tr>
}
    </tbody>
</table>
